#if !defined(JONEN_JONEN_CONFIG_H_)
#define JONEN_JONEN_CONFIG_H_

#include <string>

/// \addtogroup constants Constants
/// @{

namespace jonen
{
    const std::string JonenDocType("jonen");
    const std::string JonenLibName("@PROJECT_NAME_LOWER@");
    const std::string JonenVersion("@PROJECT_VERSION@");
    const unsigned int JonenVersionMajor(@PROJECT_VERSION_MAJOR@);
    const unsigned int JonenVersionMinor(@PROJECT_VERSION_MINOR@);
    const unsigned int JonenVersionRevision(@PROJECT_VERSION_REVISION@);
    const unsigned int JonenEBMLVersion(1);
}; // namespace jonen

/// @}
// group constants

// Enable/disable the use of nanoseconds in Boost.date_time. This depends on a
// boost compiler flag also being enabled, which is done when
// JONEN_USE_NANOSECONDS is true.
#cmakedefine JONEN_USE_NANOSECONDS

// This value will be defined if the compiler's C++ version is C++11 or
// greater.
#if __cplusplus >= 201103L
#define JONEN_CPLUSPLUS11_SUPPORT
#endif // __cplusplus >= 201103L

#endif // JONEN_JONEN_CONFIG_H_

